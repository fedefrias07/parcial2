package Datos;

import java.util.Scanner;

public class Encargado {

	private int id_encargado;
	private String nombre;

	public Encargado(int id_encargado, String nombre) {
		super();
		this.id_encargado = id_encargado;
		this.nombre = nombre;
	}

	public int getId_encargado() {
		return id_encargado;
	}

	public void setId_encargado(int id_encargado) {
		this.id_encargado = id_encargado;
	}

	public String getNombre() {
		return nombre;
	}

	public void setNombre(String nombre) {
		this.nombre = nombre;
	}

	public Venta mostrarVentas(Cafe cafe, Venta venta) {

		
		
		int cantidad;

		cantidad = (int) (Math.random() * 12 + 6);

		Venta ventanueva = new Venta(01, cafe, cantidad, 10, true);
		
		//if (ventanueva.isTarjeta_socio() == true) {
			
		//	venta.getPrecio();
		//} else {

		//}

		System.out.println("Tipo de cafe: " + cafe.getTipo_cafe() + "\nCantidad vendidos: " + cantidad + "\nPrecio: "
				+ venta.getPrecio() + "\n");

		return ventanueva;
		

	}

	
	
	public void cargarVentas() {
		
		Scanner entrada1 = new Scanner(System.in);
		
		System.out.println("Ingrese cantidad de " + + "vendidos hoy: ");
		
		int cantidad_latte = entrada1.nextInt();
		
	}
	
	
	

	
}